@import "../../../style/skin.wxss";



.main {
	padding: 0;
}

.main .upside {
	background-color: rgba(75, 148, 231, 0.1);
	height: 510rpx;
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
	overflow: hidden;
	padding-top: 30rpx;
}

.main .upside .upImg {
	height: inherit;
	width: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.main .upside .user-bar {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 9999;
	flex-direction: column;
}

.main .upside .user-bar .avatar {
	height: 160rpx;
	width: 160rpx;
	border: 0rpx;
	font-size: 80rpx;
	border-radius: 50%;
	background-color: rgba(255, 255, 255, .9);
	display: flex;
	align-items: center;
	justify-content: center;
	border: 6rpx solid var(--projectCompareColor);
}

.main .upside .user-bar .avatar image {
	height: 70rpx;
	width: 70rpx;
}

.main .upside .user-bar .detail {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	color: #fff;
	box-sizing: border-box;
}

.main .upside .user-bar .detail .name {
	font-size: 36rpx;
	font-weight: bold;
	color: #fff;
	margin-top: 10rpx;
}

.main .upside .user-bar .detail .desc {
	font-size: 26rpx;
	margin-top: 5rpx;
	color: #fff;
}

.main .down {
	box-sizing: border-box;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 20rpx 20rpx !important;
	margin-top: -100rpx;
	position: relative;
}


.main .down .data {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 150rpx;
	padding: 0rpx 40rpx 0rpx 40rpx;
	width: 100%;
	background-color: #fff;
}

.main .down .data view {
	width: 150rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.main .down .data view .num {
	font-size: 32rpx;
	font-weight: bold;
}

.main .down .data view .txt {
	font-size: 24rpx;
	color: #aaa;
}

.main .comm-list .item.arrow::before,
.main .comm-list .item .content .item-icon {
	color: #ccc;
} 

.main .site-footer {
	width: 100%;
	align-self: flex-end;
}  

.comm-list.menu>.item .content {
    font-size: 28rpx;  
}