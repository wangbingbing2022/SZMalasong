<view wx:if="{{isLoad===null}}" class="margin-top load notexist text-l load-project"></view>
<view wx:if="{{isLoad===false}}" class="margin-top load loading text-l load-project"></view>

<block wx:if="{{isLoad}}">
	<view class="main padding-project">
		<view class="text-pic-list-box margin-top-xs">
			<view class="item card-project shadow-project">
				<view class="title-line" bindtap="url" data-url="../detail/activity_detail?id={{activityJoin.ACTIVITY_JOIN_ACTIVITY_ID}}">
					<view class="title content-cut-two">{{activityJoin.activity.ACTIVITY_TITLE}} </view>
					<view class="arrow"><text class="icon-right"></text></view>
				</view>

				<view class="author">
					<text class="icon-calendar margin-right-xs text-s"></text><text class="text-cut">{{activityJoin.time}}</text>
				</view>

                <view class="author" wx:if="{{activityJoin.ACTIVITY_JOIN_PAY_STATUS!=99}}">
					<text class="icon-moneybag margin-right-xs text-s"></text><text class="text-cut">金额：{{activityJoin.ACTIVITY_JOIN_PAY_FEE}}元</text>
				</view>

				<view class="author">
                    <text wx:if="{{activityJoin.ACTIVITY_JOIN_STATUS==1&&(activityJoin.ACTIVITY_JOIN_PAY_STATUS==1||activityJoin.ACTIVITY_JOIN_PAY_STATUS==99)}}" class="text-green"><text class="icon-check margin-right-xxs"></text>报名成功，<text wx:if="{{activityJoin.ACTIVITY_JOIN_IS_CHECKIN==1}}">已签到</text>
                        <text wx:else>未签到</text>
                    </text>
                    <text wx:elif="{{(activityJoin.ACTIVITY_JOIN_STATUS==0||activityJoin.ACTIVITY_JOIN_STATUS==1)&&activityJoin.ACTIVITY_JOIN_PAY_STATUS==0}}" class="text-orange"><text class="icon-warn margin-right-xxs"></text>已报名，待缴费</text>
                    <text wx:elif="{{activityJoin.ACTIVITY_JOIN_STATUS==0&&(activityJoin.ACTIVITY_JOIN_PAY_STATUS==1||activityJoin.ACTIVITY_JOIN_PAY_STATUS==99)}}" class="text-blue"><text class="icon-newshot margin-right-xxs"></text>待审核</text>
                    <text  wx:elif="{{activityJoin.ACTIVITY_JOIN_STATUS==99}}" class="text-red"><text class="icon-roundclose margin-right-xxs"></text>未通过审核/系统已取消 </text> 
                    <text class="text-orange" wx:elif="{{activityJoin.ACTIVITY_JOIN_STATUS==98}}"><text class="icon-close margin-right-xxs "> </text>用户已取消</text>
                    <text wx:else class="text-grey"><text class="icon-warn margin-right-xxs"></text>状态异常</text>  
                 
				</view>

                <view class="author text-s" wx:if="{{activityJoin.ACTIVITY_JOIN_STATUS==98||activityJoin.ACTIVITY_JOIN_STATUS==99}}">取消时间：{{activityJoin.ACTIVITY_JOIN_CANCEL_TIME}}</view>

                <text class="author text-s" wx:if="{{activityJoin.ACTIVITY_JOIN_STATUS==99&&activityJoin.ACTIVITY_JOIN_REASON}}">取消原因：{{activityJoin.ACTIVITY_JOIN_REASON}}</text>

				<view class="oprt" wx:if="{{activityJoin.ACTIVITY_JOIN_STATUS==0 || activityJoin.ACTIVITY_JOIN_STATUS==1}}">
					<view bindtap="url" data-url="../../my/index/my_index" data-type="relaunch" wx:if="{{isShowHome}}" class="btn margin-right-s">返回首页</view>
					<view bindtap="bindCalendarTap" class="btn bg-spec">加入手机日程</view>
				</view>

			</view>

		</view>

		<view class="info-list-box" wx:if="{{activityJoin.ACTIVITY_JOIN_STATUS==1&&(activityJoin.ACTIVITY_JOIN_PAY_STATUS==1||activityJoin.ACTIVITY_JOIN_PAY_STATUS==99)}}">
			<view class="item card-project shadow-project">
				<view class="info">
					<view class="center"><text class="text-bold margin-right-s">报名码</text> (向工作人员出示进行核销)</view>
				</view>
				<view class="info">
					<view class="center">
						<image show-menu-by-longpress="{{true}}" src="{{qrImageData}}" class="loading" />
					</view>
				</view>
			</view>
		</view>

		<view class="info-list-box margin-bottom-xxl">
			<view class="item card-project shadow-project">
				<view class="info margin-bottom-s">
					<view class="center text-bold">报名信息</view>
				</view>
				<view class="info" wx:for="{{activityJoin.ACTIVITY_JOIN_FORMS}}" wx:key="key">
					<view class="title">{{item.title}}：</view>
					<view class="content">{{item.val}}</view>
				</view>

				<view class="info margin-top-xs text-s">报名时间：{{activityJoin.ACTIVITY_JOIN_ADD_TIME}}</view>
				<view wx:if="{{activityJoin.ACTIVITY_JOIN_IS_CHECKIN==1}}" class="info  margin-top-xs text-s">签到时间：{{activityJoin.ACTIVITY_JOIN_CHECKIN_TIME}}</view>
			</view>
		</view>
	</view>
</block>