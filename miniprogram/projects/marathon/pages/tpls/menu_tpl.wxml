<template name="menuTpl"> 
	<view class="tab-bar" >   
		<view wx:if="{{returnHome}}" class="tab-bar-home" bindtap="url" data-type="relaunch"
			data-url="/pages/home/index/home_index">
			<text class="tab-bar-home-text icon-homefill text-grey"></text>
		</view>

		<view class="tab-bar-border"></view>
		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/marathon/pages/default/index/default_index">
			<image class="tab-icon" src="/projects/marathon/images/tabbar/home{{curMenu=='home_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='home_index'?'menu-project':''}}">首页</view>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/marathon/pages/news/index/news_index">
			<image class="tab-icon" src="/projects/marathon/images/tabbar/news{{curMenu=='news_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='news_index'?'menu-project':''}}">公告</view>
		</view>

		<view wx:if="{{skin.cate2!==false}}" class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/marathon/pages/activity/index/activity_index">
			<image class="tab-icon" src="/projects/marathon/images/tabbar/activity{{curMenu=='activity_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='activity_index'?'menu-project':''}}">赛事</view>
		</view>

		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/marathon/pages/activity/calendar/activity_calendar">
			<image class="tab-icon" src="/projects/marathon/images/tabbar/checkin{{curMenu=='activity_calendar'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='activity_calendar'?'menu-project':''}}">日历</view>
		</view>
		 
	 
		<view class="tab-bar-item" bindtap="url" data-type="relaunch" data-url="/projects/marathon/pages/my/index/my_index">
			<image class="tab-icon" src="/projects/marathon/images/tabbar/my{{curMenu=='my_index'?'_cur':''}}.png"></image>
			<view class="tab-text {{curMenu=='my_index'?'menu-project':''}}">我的</view>
		</view>


	</view>
</template>